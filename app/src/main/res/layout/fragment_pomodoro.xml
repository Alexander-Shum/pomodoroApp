<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.pomodoro.PomodoroFragment">

    <ImageView
        android:id="@+id/buttonSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_settings"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:padding="5dp"/>

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/buttonSetting"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/buttonPomodoro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_pomodoro"
            android:gravity="center"
            android:textSize="30sp"
            android:paddingRight="5dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/buttonBreak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_break"
            android:gravity="center"
            android:textSize="30sp"
            android:paddingLeft="5dp"
            android:layout_weight="2"/>

    </LinearLayout>

    <TextView
        android:id="@+id/timer"
        android:layout_below="@+id/linear"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="120sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/linearButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/timer"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:orientation="horizontal">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="2"
            android:backgroundTint="@color/design_default_color_primary"
            android:src="@drawable/ic_play" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="2"
            android:backgroundTint="@color/design_default_color_primary"
            android:src="@drawable/ic_pause" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="2"
            android:backgroundTint="@color/design_default_color_primary"
            android:src="@drawable/ic_stop"
            />

    </LinearLayout>



    <TextView
        android:id="@+id/timeToWork"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:textSize="25sp"
        android:gravity="center"
        android:hint="Time to work!"
        android:layout_below="@+id/linearButtons"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"/>


    <LinearLayout
        android:id="@+id/linearText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/timeToWork"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_add_circle"/>

        <TextView
            android:id="@+id/addTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Add task"/>

<!--        android:imeOptions="actionDone"-->
<!--        android:inputType="text"-->

    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tasks"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:layout_below="@id/linearText"/>






</RelativeLayout>